<div class="welcome-page candidate appointment-show">
  <h1 class="primary"> Mon rendez-vous </h1>
  <div class="welcome_user-wrapper">
    <div class="welcome_user-wrapper__left appointment-show">
      <p class="bolder primary">Rappel de l'annonce</p>
      <p><%= @appointment.property.title%></p>
      <small><p><%= @appointment.property.city%></p></small>
      <small><%= @appointment.property.other_link%></small>
            <p><%= link_to "Supprimer mon RDV", appointment_path(@appointment), method: "delete", data: {confirm: "Êtes-vous sûr ? Cette action est irréversible."}, class: "btn white-btn bg-warning" %></p>
      <%if @appointment.property.property_picture.attached?%>
        <%= image_tag @appointment.property.property_picture, alt: 'property picture', class: "house-picture" %>
      <% end %>
    </div>
    <div class="welcome_user-wrapper__right appointment-show">
      <%= render partial:"slots/candidate_calendar", locals: {property: @appointment.property} %>
    </div>
  </div>
</div>