<div class="form-page">
  <div class="form-page__form">
    <h2>Éditer mon profil</h2>

    <%= form_with model: @user, url: user_path(@user), local: true, class: "form", id: "item-form", multipart: true do |f| %>
    
      <div class="field">
        <%= f.label 'Prénom' %><br />
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div>

      <div class="field">
        <%= f.label 'Nom' %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>

      <div class="actions">
        <%= f.submit "Enregistrer les changements", class:"btn white-btn bg-primary" %>
      </div>
    <% end %>

    <div class="form-page__form--links">
      <p class="mb1"><%= link_to 'Editer mon e-mail ou mot de passe', edit_user_registration_path(@user) %></p>
      <p><%= link_to 'Retour', user_path(@user) %></p>
    </div>
  </div>
</div>