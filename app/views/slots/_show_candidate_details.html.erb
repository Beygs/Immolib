<div class="candidate-profile-details-wrapper">
  <div class="candidate-profile-details-section">
    <% if appointment.candidate.profile_picture.attached?%>
      <div class="profile-wrapper__informations__right mb1">
        <%= image_tag appointment.candidate.profile_picture, alt: 'profile picture' %>
      </div>
    <% else %>
      <div class="profile-wrapper__informations__right nopic mb1">
        <p> Aucune photo de profil </p>
      </div>
    <% end %>
    <% if appointment.candidate.first_name && appointment.candidate.last_name %>
      <h3> <%= appointment.candidate.first_name %> <%= appointment.candidate.last_name %> </h3>
    <% else %>
      <p> Ce candidat n'a pas encore renseigné son nom. </p>
    <% end %>
  </div>

  <div class="candidate-profile-details-section">
    <p> Email : <%= appointment.candidate.email %> </p>
  </div>

  <div class="candidate-profile-details-section">
    <%if appointment.candidate_message %>
      <p class="bolder"> Message du candidat : </p>
      <p><em><%= appointment.candidate_message %></em></p>
    <%else%>
      <p> Ce candidat n'a pas encore envoyé de message. </p>
    <%end%>
  </div>
  <% if appointment.slot.property.owner_project == "rent" %>
    <div class="candidate-profile-details-section">
      <% if appointment.candidate_documents.attached? %>
        <p class="bolder"> Les documents fournis par le candidat : </p>
        <% appointment.candidate_documents.each do |doc| %>
          <div class="candidate-document">
            <p>
              <%= doc.filename %> - 
              <%= link_to "Prévisualiser", rails_blob_path(doc, disposition: 'preview') %>
            </p>
          </div>
        <% end %>
      <% else %>
      <p> Ce candidat n'a pas encore mis de document en ligne. </p>
      <% end %>
    </div>
  <% end %>

  <%# Insérer ici les informations relatives aux documents %>
  <div class="candidate-profile-details-section">
    <p> Dossier incomplet ? </p>
    <%= link_to "Refuser le rendez-vous", appointment_path(appointment), method: "delete", data: {confirm: "Êtes-vous sûr ? Cette action est irréversible."} %>
    <%# Modifier le redirect_to suite à la suppression de l'Appointment %>
  </div>
</div>