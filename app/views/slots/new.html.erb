<div class="form-page">
  <div class="form-page__form">
    <h3>Ajoutez un nouveau créneau de visite</h3>
    <%= form_with model: @slot, url: [@property, @slot], local: true, class: "form", id: "item-form", multipart: true do |f| %>
      <div class="form-group">
        <%= f.label "Date de début", class: "form-label" %>
        <%= f.date_field :start_date, class: "form-control", required: true %>
      </div>
      <br/>
      <div class="form-group">
        <%= f.label "Durée (en minutes)", class: "form-label" %>
        <%= f.number_field :duration, class: "form-control", in: 15..180, step: 15, required: true %>
      </div>
      <br/>
      <div class="form-group">
        <%= f.label "Nombre de visiteurs maximum", class: "form-label" %>
        <%= f.text_field :max_appointments, placeholder: "Indiquez un nombre maximum de visiteurs pour ce créneau", required: true %>
      </div>
      <br/>
      <div class="form-group">
        <%= f.submit "Ajouter le créneau", class: "btn white-btn bg-primary" %>
      </div>
    <%end%>
  </div>
</div>